#let 逐差 = (data) => {
  let half = int(data.len() / 2)
  let counter = 0
  let res = ()
  for value in data {
    if counter == half {
      break
    }
    let diff = data.at(counter + half) - value
    res.push(calc.round(diff, digits: 8))
    counter += 1
  }
  res
}

#let avg = (data) => {
  data.sum() / data.len()
