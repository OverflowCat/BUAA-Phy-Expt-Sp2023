#let c2 = x => calc.round(x, digits: 2)
#let c6 = x => calc.round(x, digits: 6)
#let c8 = x => calc.round(x, digits: 8)
#let c5(f) = calc.round(f, digits: 5)
#let sci(num) = {
  if num < 0.000000000001 {
    return num
  }
  if calc.abs(num) >= 0.1 {
    return $#c5(num)$
  }
  let sign = if num < 0 {
    num *= -1
    "-"
  } else {
    ""
  }
  let expn = 0
  while num < 1 {
    num *= 10
    expn -= 1
  }
  return $#sign#c5(num)times 10^#expn$
}
